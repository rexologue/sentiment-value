FROM pytorch/pytorch:2.8.0-cuda12.8-cudnn-runtime

WORKDIR /app

COPY runtime/api-requirements.txt runtime/api-requirements.txt
RUN pip install --no-cache-dir -r runtime/api-requirements.txt

COPY . .

ENV SENTIMENT_CONFIG_PATH=/app/config.yaml

CMD ["uvicorn", "runtime.app:app", "--host", "0.0.0.0", "--port", "8000"]
